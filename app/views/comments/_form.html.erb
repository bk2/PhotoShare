<%= simple_form_for([@picture, @picture.comments.build]) do |f| %>
    <div class='form-group'>
        <%= f.input :body, label: 'Comment', input_html: { class: 'form-control' } %>
    </div>
    <div class='form-group'>
        <%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
    </div>
<% end %>